<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NaturalGasApp.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NaturalGasApp.Pages.QrCodePage"
             x:DataType="viewmodels:QrCodeViewModel"
             Shell.PresentationMode="ModalAnimated">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior
            StatusBarColor="{StaticResource Dark}"
            StatusBarStyle="LightContent"/>
    </ContentPage.Behaviors>

    <Grid>

        <VerticalStackLayout
            Grid.Row="1"
            VerticalOptions="Center"
            Padding="10"
            Spacing="10">
            
            <Label
                Text="Поділитися застосунком"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"/>
            
            <Image
                Source="{Binding QrCode}"
                WidthRequest="250"
                HeightRequest="250"/>

            <Button
                Text="Назад"
                WidthRequest="200"
                Command="{Binding GoToBackCommand}"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>